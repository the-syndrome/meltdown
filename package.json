{
  "name": "@dex.yachts/meltdown",
  "private": true,
  "dependencies": {
    "@phosphor-icons/web": "^2.1.1",
    "async": "^3.2.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "fast-glob": "^3.3.2",
    "front-matter": "^4.0.2",
    "htmlnano": "^2.1.0",
    "imba": "^2.0.0-alpha.235",
    "lodash": "^4.17.21",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "pocketbase": "^0.21.1",
    "posthtml": "^0.16.6",
    "qs": "^6.12.0",
    "rehype-format": "^5.0.0",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "restana": "^4.9.7",
    "superagent": "^8.1.2",
    "unified": "^11.0.4",
    "url-join": "^4.0.1"
  },
  "scripts": {
    "clean": "rm -rf .tmp dist node_modules/.cache node_modules/imba/.imba-cache",
    "setup-dirs": "mkdir -p .tmp",
    "setup-routes": "imba run --loglevel error ./tools/build-routes.imba",
    "setup": "run-s -s 'setup-*'",
    "export-content": "NODE_ENV=production imba run tools/export-content.imba",
    "dev-rebuild-routes": "nodemon -q -d 1 -C -w src/pages --ext imba,js,ts,md --exec 'npm run setup-routes' || true",
    "dev-server": "imba -w src/server.imba || true",
    "dev": "run-s -s setup && run-p -s 'dev-*' || true",
    "build": "imba build src/server.imba",
    "generate": "echo 'todo gen'",
    "preview": "node dist/server.js",
    "prod": "npx pm2 start dist/server.js"
  }
}
